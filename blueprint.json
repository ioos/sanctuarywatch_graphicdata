{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/",
  "preferredVersions": {
    "php": "8.3",
    "wp": "latest"
  },
  "steps": [
    {
      "step": "login",
      "username": "admin"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "Graphic Data demo"
      }
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "wordpress.org/plugins",
        "slug": "svg-support"
      }
    },
    {
      "step": "activatePlugin",
      "pluginPath": "svg-support/svg-support.php"
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "url",
        "url": "https://github.com/ioos/sanctuarywatch_graphicdata/releases/download/v1.2.1/graphic_data_plugin.zip"
      }
    },
    {
      "step": "activatePlugin",
      "pluginPath": "graphic_data_plugin/graphic_data_plugin.php"
    },
    {
      "step": "installTheme",
      "themeData": {
        "resource": "url",
        "url": "https://github.com/ioos/sanctuarywatch_graphicdata/releases/download/v1.2.1/graphic_data_theme.zip"
      }
    },
    {
      "step": "activateTheme",
      "themeFolderName": "graphic_data_theme"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "graphic_data_settings": {
          "tutorial_content": true
        }
      }
    },
    {
      "step": "runPHP",
      "code": "<?php define('WP_USE_THEMES', false); require_once 'wordpress/wp-load.php'; do_action('plugins_loaded'); do_action('init'); if (class_exists('Graphic_Data_Tutorial_Content')) { $tutorial = new Graphic_Data_Tutorial_Content(); if (method_exists($tutorial, 'check_tutorial_content_status')) { $tutorial->check_tutorial_content_status(); } } ?>"
    }
  ]
}